<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">
           <TextView
               android:layout_width="match_parent"
               android:layout_height="240dp"
               android:background="@drawable/osimage2"
               android:paddingTop="200dp"
               android:text="@string/judul"
               android:textSize="24sp"
               android:textStyle="bold"
               android:gravity="center"
               android:textColor="@color/colorBitterSweetDark"/>

           <LinearLayout
               android:id="@+id/windows"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:weightSum="3">

               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_height="120dp"
                   android:layout_margin="2dp"
                   android:background="@color/colorGrass"
                   android:orientation="vertical"
                   android:layout_weight="1"
                   tools:ignore="Suspicious0dp">

                   <ImageView
                       android:layout_width="60dp"
                       android:layout_height="50dp"
                       android:layout_marginTop="10dp"
                       android:layout_gravity="center"
                       android:background="@drawable/winback"
                       android:tint="@color/colorWhite"/>
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:padding="8dp"
                       android:layout_marginTop="20dp"
                       android:background="@color/colorGrassDark"
                       android:text="Windows"
                       android:textSize="18sp"
                       android:gravity="center"
                       android:textColor="@color/colorWhite"/>
               </LinearLayout>
               <LinearLayout
                   android:id="@+id/linux"
                   android:layout_width="0dp"
                   android:layout_height="120dp"
                   android:layout_margin="2dp"
                   android:background="@color/colorGrapeFruit"
                   android:orientation="vertical"
                   android:layout_weight="1"
                   tools:ignore="Suspicious0dp">

                   <ImageView
                       android:layout_width="60dp"
                       android:layout_height="50dp"
                       android:layout_marginTop="10dp"
                       android:layout_gravity="center"
                      android:background="@drawable/linux"
                       android:tint="@color/colorWhite"/>
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:padding="8dp"
                       android:layout_marginTop="20dp"
                       android:background="@color/colorGrapeFruitDark"
                       android:text="Linux"
                       android:textSize="18sp"
                      android:gravity="center"
                       android:textColor="@color/colorWhite"/>
               </LinearLayout>
               <LinearLayout
                   android:id="@+id/macos"
                   android:layout_width="0dp"
                   android:layout_height="120dp"
                   android:layout_margin="2dp"
                   android:background="@color/colorBlueJeans"
                   android:orientation="vertical"
                   android:layout_weight="1"
                   tools:ignore="Suspicious0dp">

                   <ImageView
                       android:layout_width="60dp"
                       android:layout_height="50dp"
                       android:layout_marginTop="10dp"
                       android:layout_gravity="center"
                       android:background="@drawable/macos"
                       android:tint="@color/colorWhite"/>
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:padding="8dp"
                       android:layout_marginTop="20dp"
                       android:background="@color/colorBlueJeansDark"
                       android:text="Mac Os"
                       android:textSize="18sp"
                       android:gravity="center"
                       android:textColor="@color/colorWhite"/>
               </LinearLayout>
           </LinearLayout>

           <!--Second Row-->
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               >

               <LinearLayout
                   android:id="@+id/solaris"
                   android:layout_width="0dp"
                   android:layout_height="120dp"
                   android:layout_margin="2dp"
                   android:background="@color/colorMint"
                   android:orientation="vertical"
                   android:layout_weight="1"
                   tools:ignore="Suspicious0dp">

                   <ImageView
                       android:layout_width="60dp"
                       android:layout_height="40dp"
                       android:layout_marginTop="10dp"
                       android:layout_gravity="center"
                       android:background="@drawable/solaris"
                       android:tint="@color/colorWhite"/>
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:padding="8dp"
                       android:layout_marginTop="30dp"
                       android:background="@color/colorMintDark"
                       android:text="Solaris"
                       android:textSize="18sp"
                       android:gravity="center"
                       android:textColor="@color/colorWhite"/>
               </LinearLayout>
               <LinearLayout
                   android:id="@+id/ioss"
                   android:layout_width="0dp"
                   android:layout_height="120dp"
                   android:layout_margin="2dp"
                   android:background="@color/colorPinkRose"
                   android:orientation="vertical"
                   android:layout_weight="1"
                   tools:ignore="Suspicious0dp">

                   <ImageView
                       android:layout_width="60dp"
                       android:layout_height="50dp"
                       android:layout_marginTop="10dp"
                       android:layout_gravity="center"
                       android:background="@drawable/ios"
                       android:tint="@color/colorWhite"/>
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:padding="8dp"
                       android:layout_marginTop="20dp"
                       android:background="@color/colorPinkRoseDark"
                       android:text="IOS"
                       android:textSize="18sp"
                       android:gravity="center"
                       android:textColor="@color/colorWhite"/>
               </LinearLayout>
               <LinearLayout
                   android:id="@+id/android"
                   android:layout_width="0dp"
                   android:layout_height="120dp"
                   android:layout_margin="2dp"
                   android:background="@color/colorFlower"
                   android:orientation="vertical"
                   android:layout_weight="1"
                   tools:ignore="Suspicious0dp">

                   <ImageView
                       android:layout_width="60dp"
                       android:layout_height="50dp"
                       android:layout_marginTop="10dp"
                       android:layout_gravity="center"
                       android:background="@drawable/android"
                       android:tint="@color/colorWhite"/>
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:padding="8dp"
                       android:layout_marginTop="20dp"
                       android:background="@color/colorFlowerDark"
                       android:text="Android"
                       android:textSize="18sp"
                       android:gravity="center"
                       android:textColor="@color/colorWhite"/>
               </LinearLayout>
           </LinearLayout>
             <!--End Second Row-->
        <!--Third row-->
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               >
               <LinearLayout
                   android:id="@+id/ibm"
                   android:layout_width="0dp"
                   android:layout_height="120dp"
                   android:layout_margin="2dp"
                   android:background="@color/colorAccent"
                   android:orientation="vertical"
                   android:layout_weight="1"
                   tools:ignore="Suspicious0dp">

                   <ImageView
                       android:layout_width="60dp"
                       android:layout_height="50dp"
                       android:layout_marginTop="10dp"
                       android:layout_gravity="center"
                       android:background="@drawable/ibm"
                       android:tint="@color/colorWhite"/>
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:padding="8dp"
                       android:layout_marginTop="20dp"
                       android:background="@color/colorAquaDark"
                       android:text="IBM"
                       android:textSize="18sp"
                       android:gravity="center"
                       android:textColor="@color/colorWhite"/>
               </LinearLayout>
               <LinearLayout
                   android:id="@+id/unixfreebsd"
                   android:layout_width="0dp"
                   android:layout_height="120dp"
                   android:layout_margin="2dp"
                   android:background="@color/colorPrimary"
                   android:orientation="vertical"
                   android:layout_weight="1"
                   tools:ignore="Suspicious0dp">

                   <ImageView
                       android:layout_width="60dp"
                       android:layout_height="50dp"
                       android:layout_marginTop="10dp"
                       android:layout_gravity="center"
                       android:background="@drawable/unix"
                       android:tint="@color/colorWhite"/>
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:padding="8dp"
                       android:layout_marginTop="20dp"
                       android:background="@color/colorPrimaryDark"
                       android:text="Unix"
                       android:textSize="18sp"
                       android:gravity="center"
                       android:textColor="@color/colorWhite"/>
               </LinearLayout>
               <LinearLayout
                   android:id="@+id/chromeOs"
                   android:layout_width="0dp"
                   android:layout_height="120dp"
                   android:layout_margin="2dp"
                   android:background="@color/colorLavander"
                   android:orientation="vertical"
                   android:layout_weight="1"
                   tools:ignore="Suspicious0dp">

                   <ImageView
                       android:layout_width="60dp"
                       android:layout_height="50dp"
                       android:layout_marginTop="10dp"
                       android:layout_gravity="center"
                       android:background="@drawable/cromeos"
                       android:tint="@color/colorWhite"/>
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:padding="8dp"
                       android:layout_marginTop="20dp"
                       android:background="@color/colorLavanderDark"
                       android:text="Chromixium OS"
                       android:textSize="18sp"
                       android:gravity="center"
                       android:textColor="@color/colorWhite"/>

               </LinearLayout>
           </LinearLayout>

           <!--End Third Row-->
       </LinearLayout>

   </ScrollView>

</LinearLayout>