<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WindowsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:background="@drawable/gwindows"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PENGERTIAN WINDOWS"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#509CEC"
                android:layout_margin="8dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no1"
                android:textAlignment="center"
                android:textColor="#000000"/>
                <Button
                    android:id="@+id/setting"
                    android:layout_width="100dp"
                    android:layout_height="65dp"
                    android:textAlignment="center"
                    android:text="SETTING BIOOST"/>
                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:background="#FFCE56"
                    android:textSize="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="KLIK CARA INSTAL"/>
            <Button
                android:id="@+id/win7"
                android:layout_width="100dp"
                android:layout_height="65dp"
                android:textAlignment="center"
                android:layout_margin="10dp"
                android:background="#4A89DC"
                android:text="WINDOWS 7"/>
            <Button
                android:id="@+id/win8"
                android:layout_width="100dp"
                android:layout_height="65dp"
                android:textAlignment="center"
                android:background="#A0D468"
                android:layout_margin="10dp"
                android:text="WINDOWS 8"/>
            <Button
                android:id="@+id/win10"
                android:layout_width="100dp"
                android:layout_height="65dp"
                android:textAlignment="center"
                android:background="#3BAFDA"
                android:layout_margin="10dp"
                android:text="WINDOWS 10"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>