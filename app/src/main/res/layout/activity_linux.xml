<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Linux">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@drawable/linuxtext"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PENGERTIAN LINUX"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#509CE0"
                android:layout_margin="8dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/linux"
                android:textAlignment="center"
                android:textColor="#000000"/>
            <Button
                android:id="@+id/debian"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:textAlignment="center"
                android:layout_margin="30dp"
                android:background="#E9573F"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:text="Linux Debian"/>
            <Button
                android:id="@+id/ubuntu"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:textAlignment="center"
                android:layout_margin="2dp"
                android:background="#F68B42"
                android:layout_gravity="center"
                android:text="Linux Ubuntu"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>